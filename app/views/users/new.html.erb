<%= stylesheet_link_tag "users" %>

<% if flash[:error]%>
<% flash[:error].each do | error |%>
<li>
<%= error %>
</li>
<% end %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :user_name %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<%= f.submit %>
<% end %>
